@model E_Ticaret.Entity.Models.ViewModel.ViewBookForDetails
@{
    ViewBag.Title = "BookDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    
    <form role="form" method="post">        
        
        <input type="hidden" name="BookID" value="@Model.BookID"/>
        <input type="hidden" name="PhotoUrl" value="@Model.PhotoUrl" />
        <input type="hidden" name="BookName" value="@Model.BookName" />
        
        <div class="row">
            <div class="photo">                
                <img class="image"
                     img-responsive" 
                     src="@Model.PhotoUrl" />                                       
            </div>
            
            <input type="hidden" name="PhotoUrl" value="@Model.PhotoUrl" />

        </div>
        <br />
        <br />
        <div class="row">
            <div class="detail col-lg-9">
                <div class="thumbnail">
                    <div class="caption-full">
                        <p class="book-name">
                            <a 
                               href="#" 
                              name="BookName">@Model.BookName
                            </a>
                        </p>
                        <p class="who">
                            <strong>Yazar : </strong>
                            <a name="WriterName"
                               target="_blank"
                               href="/Yazar/@Model.WriterID">
                                @Model.WriterName
                            </a>
                        </p>
                        <p class="who">
                            <strong>Yayınevi : </strong>
                            <a name="Publisher"
                               target="_blank"
                               href="#">
                                @Model.Publisher
                            </a>
                        </p>

                        <p name="BookSubject">@(new HtmlString(Model.BookSubject.ToString()))
                        </p>
                        <br />
                        <div class="row">
                            <div class="col-lg-3 col-lg-offset-5  text-right">
                                
                                <input type="hidden" 
                                       value="@Model.Price" 
                                       name="Price" />
                                <h3>
                                    <strong>@Model.Price TL</strong>
                                </h3>
                            </div>
                            <div class="col-lg-1">
                                <input type="number" 
                                       class="numeric form-control"
                                       value="1"
                                       min="1" 
                                       name="BookCount" />
                            </div>
                            <div class="col-lg-1">
                                <button type="submit"
                                        class="btn green">SEPETE EKLE                                    
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


