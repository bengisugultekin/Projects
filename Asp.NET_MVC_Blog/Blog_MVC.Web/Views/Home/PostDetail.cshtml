@model Blog_MVC.Entity.Models.ViewModel.ViewPost

@{
    ViewBag.Title = "PostDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    #tagButton {
        border: 1px solid #ddd;
        padding: 4px 6px;
        border-radius: 5px;
        font-size: 12px;
        text-transform: none;
        font-weight: 600;
    }
</style>

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('/Images/dog-post.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading">
                    <h1>@Model.Title</h1>
                    <h2 class="subheading"></h2>
                    <span class="meta">Posted by <a href="/Home/About">Bengisu Gültekin</a> @Model.PostDate.ToLongDateString()</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 text-justify">
                @(new HtmlString(Model.Content.ToString()))
            </div>
        </div>
        <hr />
    </div>
</article>

<!-- #Categories and Tags -->
<br />
<div class="container">

    <div class="row">
        <div class="form-group col-lg-4 col-lg-offset-2 col-md-10 col-md-offset-1">
            <label>Category</label><br />          
            <a id="tagButton"
               class="btn btn-default"
               href="/Home/SearchByCategory/@Model.CategoryID"
               role="button">@Model.CategoryName</a>
        </div>
        <div class="form-group col-lg-4 col-md-10 col-md-offset-1">
            <label>Tags</label><br />
            @foreach (var item in Model.Tags)
            {               
                <a id="tagButton"
                   class="btn btn-default"                    
                   href="/Home/SearchByTag/@item.TagID"                   
                   role="button">@item.Name</a>
            }
        </div>
    </div>
</div>
<br />
<!-- #endregion -->
<hr>
