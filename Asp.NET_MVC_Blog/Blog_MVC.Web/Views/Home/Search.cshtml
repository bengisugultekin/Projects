
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    #tagButton {
        border: 1px solid #ddd;
        padding: 4px 6px;
        border-radius: 5px;
        font-size: 12px;
        text-transform: none;
        font-weight: 600;
    }
</style>

<header class="intro-header" style="background-image: url('/Images/makine.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Search</h1>
                    <hr class="small">
                    <span class="subheading">Category or Tag</span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container">
        <div class="row">

            <div class="form-group col-lg-3 col-lg-offset-3">
                <label>Categories</label><br />
                @{
                    foreach (var item in ViewBag.Categories)
                    {
                        <a id="tagButton"
                           class="btn btn-default"
                           href="/Home/SearchByCategory/@item.CategoryID"
                           role="Button">@item.Name</a>
                    }
                }

            </div>     

        
            <div class="form-group col-lg-3 ">
                <label>Tags</label><br />
                @{
                    foreach (var item in ViewBag.Tags)
                    {
                        <a id="tagButton"
                            class="btn btn-default"
                            href="/Home/SearchByTag/@item.TagID"
                            role="Button">@item.Name</a>
                    }
                }

            </div>
        </div>
    </div>
<hr />













