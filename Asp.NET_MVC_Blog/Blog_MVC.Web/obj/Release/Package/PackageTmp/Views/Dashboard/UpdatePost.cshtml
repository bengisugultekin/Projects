
@{
    ViewBag.Title = "UpdatePost";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model Blog_MVC.Entity.Models.ViewModel.ViewPost

<link href="~/Content/CSS/Summernote/summernote.css" rel="stylesheet" />
<link href="~/Content/CSS/tags/bootstrap-tagsinput.css" rel="stylesheet" />
<link href="~/Content/CSS/tags/app.css" rel="stylesheet" />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Your post to be...
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">

                        <form role="form" method="post">

                            <input type="hidden" name="PostID" value="@Model.PostID"/>                           

                            <div class="form-group">
                                <input class="form-control"
                                       type="text"
                                       placeholder="Title"
                                       name="Title"
                                       value="@Model.Title"
                                       required />

                            </div>

                            <div class="form-group">
                                <textarea id="summernote" name="Content">@Model.Content</textarea>
                            </div>

                            <div class="form-group">
                                <input class="form-control"
                                       type="text"
                                       placeholder="Category"
                                       name="Category"
                                       value="@Model.CategoryName"
                                       required>
                            </div>

                            @{
                                string temp = "";
                                foreach (var item in Model.Tags)
                                {
                                    temp += item.Name + ",";
                                }
                            }

                            <div class="form-group">                            
                                <input class="form-control"
                                       type="text"
                                       placeholder="Tags eg. c#, mvc, opp "
                                       name="Tags"
                                       value="@temp"
                                       data-role="tagsinput"
                                       required>
                            </div>

                            <button type="submit" class="btn btn-primary btn-block">Save</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Summernote/summernote.js"></script>
<script src="~/Scripts/tags/bootstrap-tagsinput.min.js"></script>

<script>
    $(document).ready(function () {
        $('#summernote').summernote({
            height: 300,

        });
    });

</script>


